{
  "name": "tv",
  "description": "Interactive debug console plugin for hapi",
  "version": "2.0.0",
  "author": "Eran Hammer <eran@hammer.io> (http://hueniverse.com)",
  "contributors": [
    "Wyatt Preul <wpreul@gmail.com>",
    "Van Nguyen <the.gol.effect@gmail.com>",
    "Ben Nguyen <benobviate@gmail.com>",
    "Alex Lande <alexlande@gmail.com>"
  ],
  "repository": "git://github.com/hapijs/tv",
  "main": "index",
  "keywords": [
    "debug",
    "console",
    "hapi",
    "plugin"
  ],
  "engines": {
    "node": ">=0.10.30"
  },
  "dependencies": {
    "backbone": "^1.1.2",
    "bootstrap": "^3.3.1",
    "handlebars": "^1.3.0",
    "hoek": "2.x.x",
    "interact": "taye/interact.js",
    "json-markup": "^0.1.6",
    "lodash": "^2.4.1",
    "moment": "^2.8.4",
    "prettify": "^0.1.7",
    "react": "^0.12.0",
    "react-bootstrap": "^0.13.0",
    "ws": "0.4.x"
  },
  "peerDependencies": {
    "hapi": ">=2.x.x"
  },
  "devDependencies": {
    "browserify": "^6.3.2",
    "hapi": "6.x.x",
    "lab": "4.x.x",
    "node-sass": "^1.2.2",
    "reactify": "^0.16.0",
    "rewire": "^2.1.3",
    "sinon": "^1.12.1",
    "watchify": "^2.1.1"
  },
  "scripts": {
    "test": "make test-cov",
    "watch-js": "watchify -t reactify -e source/js/start.js source/js/**/*.js -o public/js/main.js -d -v",
    "watch-styles": "node-sass source/styles/style.scss public/css/style.css -w source/styles -r",
    "watch": "npm run build && npm run watch-js & npm run watch-styles",
    "build-js": "browserify -t reactify -e source/js/start.js source/js/**/*.js > public/js/main.js -d",
    "build-styles": "node-sass source/styles/style.scss public/css/style.css",
    "build": "npm run build-js && npm run build-styles",
    "boot": "node examples/simple.js",
    "start": "npm run build && npm run boot",
    "start-dev": "npm run watch & npm run boot"
  },
  "licenses": [
    {
      "type": "BSD",
      "url": "http://github.com/hapijs/tv/raw/master/LICENSE"
    }
  ]
}
