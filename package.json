{
  "name": "tv",
  "description": "Interactive debug console plugin for hapi",
  "version": "2.0.0",
  "author": "Eran Hammer <eran@hammer.io> (http://hueniverse.com)",
  "contributors": [
    "Wyatt Preul <wpreul@gmail.com>",
    "Van Nguyen <the.gol.effect@gmail.com>",
    "Ben Nguyen <benobviate@gmail.com>",
    "Alex Lande <alexlande@gmail.com>"
  ],
  "repository": "git://github.com/hapijs/tv",
  "main": "index",
  "keywords": [
    "debug",
    "console",
    "hapi",
    "plugin"
  ],
  "engines": {
    "node": ">=0.10.30"
  },
  "dependencies": {
    "backbone": "^1.1.2",
    "handlebars": "^1.3.0",
    "hoek": "2.x.x",
    "lodash": "^2.4.1",
    "interact": "taye/interact.js",
    "prettify": "^0.1.7",
    "ws": "0.4.x"
  },
  "peerDependencies": {
    "hapi": ">=2.x.x"
  },
  "devDependencies": {
    "browserify": "^6.3.2",
    "hapi": "6.x.x",
    "hbsfy": "^2.2.0",
    "lab": "4.x.x",
    "node-sass": "^1.2.2",
    "watchify": "^2.1.1"
  },
  "scripts": {
    "test": "make test-cov",
    "watch-js": "watchify -t hbsfy source/js/ui.js -o public/js/app.js -d",
    "watch-styles": "node-sass source/styles/style.scss public/css/style.css --watch",
    "watch": "npm run watch-js & npm run watch-styles",
    "build-js": "browserify -t hbsfy source/js/ui.js > public/js/app.js -d",
    "build-styles": "node-sass source/styles/style.scss public/css/style.css",
    "build": "npm run build-js && npm run build-styles"
  },
  "licenses": [
    {
      "type": "BSD",
      "url": "http://github.com/hapijs/tv/raw/master/LICENSE"
    }
  ]
}
